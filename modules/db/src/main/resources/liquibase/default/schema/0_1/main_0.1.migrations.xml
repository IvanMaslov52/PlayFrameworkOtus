<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="create table Product" author="imaslov">
        <createTable tableName="Product">
            <column name="id" type="VARCHAR(50)">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)"></column>
        </createTable>

        <createTable tableName="ProductItem">
            <column name="id" type="VARCHAR(50)">
                <constraints primaryKey="true"/>
            </column>
            <column name="productId" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="INT">
            </column>
            <column name="quantity" type="INT">
            </column>
            <column name="inStock" type="BOOLEAN"></column>
        </createTable>

        <addForeignKeyConstraint baseTableName="ProductItem" baseColumnNames="productId" constraintName="fk_toProduct"
                                 referencedTableName="Product"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="add unique constraint" author="imaslov">
        <addUniqueConstraint
                schemaName="public"
                tableName="Product"
                columnNames="title"
                constraintName="unique_title_constraint"/>
    </changeSet>
</databaseChangeLog>